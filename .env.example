NEXT_PUBLIC_BASE_SEPOLIA_DEX_ROUTER_REGISTRY=

# ===== ECONOMIC MODEL =====
# Token creation fee: 0.025 BNB (~$25 USD)
#   - Static BNB amount (no oracle needed)
#   - BSC-only optimization
#   - Anti-spam mechanism + revenue stream
#   - Revenue: $11.9K/month @ 500 tokens
#
# Trading fees: 1% Basic, 0.5% Premium, 0.25% Enterprise
#
# Graduation split: 80% creator, 20% platform
#   - Creator: 80% (~$154K) for DEX liquidity
#   - Platform: 20% (~$38K) risk compensation
#
# Total projected revenue: $857K/year @ 500 tokens/month

# ===== DEPLOYMENT CONFIGURATION =====
# Your private key for contract deployment (KEEP SECRET!)
# NEVER commit this to version control
PRIVATE_KEY=your_private_key_here

# Block Explorer API Keys (for contract verification)
BSCSCAN_API_KEY=your_bscscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key
BASESCAN_API_KEY=your_basescan_api_key

# Optional: Custom RPC URLs for deployment
BSC_RPC_URL=
BSC_TESTNET_RPC_URL=
ARBITRUM_RPC_URL=
ARBITRUM_SEPOLIA_RPC_URL=
BASE_RPC_URL=
BASE_SEPOLIA_RPC_URL=

# ===== OPTIONAL SERVICES =====
# IPFS for token metadata storage
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.ipfs.io
IPFS_API_KEY=

# Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=
MIXPANEL_TOKEN=

# Error tracking (optional)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# ===== DEVELOPMENT ONLY =====
# Set to true for development logging
NEXT_PUBLIC_DEBUG=false
NODE_ENV=development
