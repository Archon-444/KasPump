NEXT_PUBLIC_ARBITRUM_FEE_RECIPIENT=
NEXT_PUBLIC_ARBITRUM_DEX_ROUTER_REGISTRY=

# Arbitrum Sepolia (421614)
NEXT_PUBLIC_ARBITRUM_SEPOLIA_TOKEN_FACTORY=
NEXT_PUBLIC_ARBITRUM_SEPOLIA_FEE_RECIPIENT=
NEXT_PUBLIC_ARBITRUM_SEPOLIA_DEX_ROUTER_REGISTRY=

# Base (8453)
NEXT_PUBLIC_BASE_TOKEN_FACTORY=
NEXT_PUBLIC_BASE_FEE_RECIPIENT=
NEXT_PUBLIC_BASE_DEX_ROUTER_REGISTRY=

# Base Sepolia (84532)
NEXT_PUBLIC_BASE_SEPOLIA_TOKEN_FACTORY=
