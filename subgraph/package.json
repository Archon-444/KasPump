{
  "name": "kaspump-subgraph",
  "version": "1.0.0",
  "description": "The Graph subgraph for KasPump platform",
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "deploy": "graph deploy --product hosted-service",
    "deploy:testnet": "graph deploy --product hosted-service kaspump/kaspump-bsc-testnet",
    "deploy:mainnet": "graph deploy --product hosted-service kaspump/kaspump-bsc-mainnet",
    "create:local": "graph create --node http://localhost:8020/ kaspump/kaspump",
    "remove:local": "graph remove --node http://localhost:8020/ kaspump/kaspump",
    "deploy:local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 kaspump/kaspump"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.65.0",
    "@graphprotocol/graph-ts": "^0.32.0"
  },
  "devDependencies": {
    "matchstick-as": "^0.6.0"
  }
}
