      "platform": "wide",
      "label": "Desktop analytics dashboard"
    }
  ],

  "shortcuts": [
    {
      "name": "Create Token",
      "short_name": "Create",
      "description": "Launch a new token instantly",
      "url": "/create",
      "icons": [
        {
          "src": "/icons/shortcut-create.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Trading",
      "short_name": "Trade",
      "description": "Access advanced trading interface",
      "url": "/trade",
      "icons": [
        {
          "src": "/icons/shortcut-trade.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Portfolio",
      "short_name": "Portfolio",
      "description": "View your token portfolio",
      "url": "/portfolio",
      "icons": [
        {
          "src": "/icons/shortcut-portfolio.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Analytics",
      "short_name": "Analytics",
      "description": "Professional creator analytics",
      "url": "/analytics",
      "icons": [
        {
          "src": "/icons/shortcut-analytics.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],

  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://kaspump.io"
    }
  ],

  "prefer_related_applications": false,

  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "launch_handler": {
    "client_mode": "focus-existing"
  },

  "protocol_handlers": [
    {
      "protocol": "web+kaspump",
      "url": "/handle?protocol=%s"
    }
  ],

  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", ".pdf"]
        }
      ]
    }
  },

  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],

  "handle_links": "preferred"
}
